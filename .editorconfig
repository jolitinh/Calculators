
# This file is for unifying the coding style for different editors and IDEs
# editorconfig.org

root = true

# global settings
# utf-8 encoded with Unix-style line endings and trailing newline of files
# globally applying tab as the preferred indent character (as per Engrade styleguide)

[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 2